 <h1>User Login Details</h1>


<% if current_user %>
    <h2><%= current_user.email%></h2>
    <%= image_tag(current_user.avatar_url) if current_user.avatar_url !=nil %>
    <%= link_to "Edit Account", edit_user_registration_path%>
    <%= button_to "Logout", destroy_user_session_path, data: {turbo: "false"},method: :delete%>

    <h3>Upload CSV Data</h3>
    <%= form_tag import_csv_records_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Upload CSV Data" %>
    <% end %>


<% else %>
    <%= link_to "Login", new_user_session_path%>
    <%= link_to "Create Account", new_user_registration_path %>

<% end %>

